@model U2_Act5.Models.ViewModels.ClasificacionViewModel
@{
    Layout = "_Layout";
}


<div class="slides">
    <img src="~/images/carousel@(Model.NumImg).jpg">
</div>

<h1>Clasificación de los vertebrados</h1>

<div class="clases">
    @foreach (var clase in Model.Clasificacion)
    {
        <div>
            <a href="~/Especie/@clase.Nombre">
                <img src="~/clases/@(clase.Id).jpg">
                <h1>@clase.Nombre</h1>
                <p>@clase.Descripcion</p>
            </a>
        </div>
    }
</div>

